{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "title": "Items.Created.v1",
  "description": "json schema for CUD items events (version 1)",

  "definitions": {
    "event_data": {
      "type": "object",
      "properties": {
        "public_id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": ["string", "null"]
        }
      },
      "required": [
        "public_id",
        "title"
      ]
    }
  },

  "type": "object",

  "properties": {
    "event_id":      { "type": "string" },
    "event_version": { "enum": [1] },
    "event_name":    { "enum": ["ItemsCreated"] },
    "event_time":    { "type": "string" },
    "producer":      { "type": "string" },

    "data": { "$ref": "#/definitions/event_data" }
  },

  "required": [
    "event_id",
    "event_version",
    "event_name",
    "event_time",
    "producer",
    "data"
  ]
}

